# QuickBooks Online OAuth2 Configuration
INTUIT_CLIENT_ID=your_intuit_client_id_here
INTUIT_CLIENT_SECRET=your_intuit_client_secret_here
INTUIT_REDIRECT_URI=http://localhost:8000/api/v1/auth/callback
INTUIT_ENV=sandbox
INTUIT_REALM_ID=

# Security
JWT_SECRET=change-this-to-a-secure-random-string-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=1440

# Database Configuration
DB_TYPE=duckdb
DB_PATH=./data/bre.duckdb
DB_MEMORY_LIMIT=4GB
DB_THREADS=4

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_MAX_CONNECTIONS=50

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_RELOAD=true
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Logging
LOG_LEVEL=info
LOG_FORMAT=json
STRUCTLOG_RENDERER=console

# Celery Worker Configuration
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2
CELERY_TASK_SERIALIZER=json
CELERY_RESULT_SERIALIZER=json
CELERY_ACCEPT_CONTENT=json

# MLflow Tracking
MLFLOW_TRACKING_URI=./mlruns
MLFLOW_EXPERIMENT_NAME=ledgerguard-bre

# Engine Configuration
ANOMALY_DETECTION_SENSITIVITY=0.85
MIN_CONFIDENCE_THRESHOLD=0.70
BLAST_RADIUS_MAX_DEPTH=5
MONITOR_EVALUATION_INTERVAL_SECONDS=300

# Feature Flags
ENABLE_ML_TRAINING=true
ENABLE_AUTO_REMEDIATION=false
ENABLE_REALTIME_ANALYSIS=true
ENABLE_SUPPLEMENTAL_DATA=true

# Reporting
REPORT_OUTPUT_DIR=./reports
REPORT_LOGO_PATH=./assets/logo.png

# Development
DEV_MODE=true
DEBUG=false
TESTING=false
